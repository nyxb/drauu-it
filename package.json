{
   "version": "0.0.0",
   "private": true,
   "packageManager": "bun@1.0.14",
   "workspaces": [
      "packages/*",
      "playground"
    ],
   "scripts": {
     "play:dev": "bun -C playground run dev -- --open",
     "play:build": "bun -C playground run build",
     "js:dev": "bun run -r --parallel --filter=./packages/* dev",
     "js:build": "bun run -r --filter=./packages/* build",
     "dev": "nyxr play:dev",
     "build": "nyxr js:build",
     "lint": "eslint .",
     "release": "bumping package.json packages/*/package.json && pnpm -r publish --access public"
   },
   "devDependencies": {
     "@nyxb/nyxi": "^0.0.31",
     "@typescript-eslint/eslint-plugin": "^6.7.0",
     "bun-types": "latest",
     "bun": "^1.0.14",
     "bumpp": "^9.2.0",
     "cross-env": "^7.0.3",
     "eslint": "^8.54.0",
     "nanoevents": "^8.0.0",
     "npm-run-all": "^4.1.5",
     "tsup": "^7.2.0",
     "typescript": "^5.2.2"
   }
 }
 