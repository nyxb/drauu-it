{
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.0.14",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "play:dev": "cd playground && bun run dev --open",
    "play:build": "cd playground && bun run build",
    "js:dev": "bun run -r --parallel --filter=./packages/* dev",
    "js:build": "bun run -r --filter=./packages/* build",
    "dev": "nyxr play:dev",
    "build": "nyxr js:build",
    "lint": "eslint .",
    "release": "bumping package.json packages/*/package.json && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@nyxb/eslint-config": "^1.0.6",
    "@nyxb/nyxi": "^0.0.31",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "bumping": "^9.2.1",
    "bun": "^1.0.14",
    "bun-types": "latest",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "nanoevents": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
